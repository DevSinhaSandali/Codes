import java.util.Scanner;
class ArrEven
{
public static void main (String...s)
{
Scanner scr = new Scanner(System.in);
int[] arr = new int[10]; 

System.out.println("Enter ten numbers:");
for (int i=0; i < 10; i++)
{
arr[i] = scr.nextInt();
}

for(int i=0; i<10; i++)
{
if(arr[i] % 2 == 0)
{
System.out.println ("Even number: " +arr[i]);
break;
System.out.println(i);
}
}
}
}
